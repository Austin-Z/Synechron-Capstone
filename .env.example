# SEC and OpenFIGI API Configuration
OPENFIGI_API_KEY="your-openfigi-api-key"

# OpenFIGI API Key
FIGI_API_KEY=your-figi-api-key

# Railway will provide this in production
DATABASE_URL=mysql://user:password@host:3306/database_name 