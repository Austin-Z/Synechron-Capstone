# SEC EDGAR API Credentials
SEC_USER_AGENT="Your Name (your.email@domain.com)"

# Environment
ENV="development"

# Database Configuration
DB_HOST=host.docker.internal  # Special Docker DNS to access host machine
DB_PORT=3306
DB_NAME=fof_analysis
DB_USER=root
DB_PASSWORD=your_password_here

# Test Database Configuration
TEST_DB_NAME=fof_analysis_test

# API Configuration
API_RATE_LIMIT=10

